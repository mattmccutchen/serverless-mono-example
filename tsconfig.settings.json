{
  "compilerOptions": {
    "module": "amd",
    "target": "es6",
    "lib": [ 
      "es6", "dom"
    ],
    "moduleResolution": "node",

    "rootDir": "./",
    //"baseUrl": "packages/",
    //"paths": {
    //  "@org/*": ["./*/dist.d.ts"]
    //},
    
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    //"resolveJsonModule": true
  },
  "exclude": [
    "**/dist.*",
    "**/dist",
    "**/node_modules",
    "**/test"
   ]
}
